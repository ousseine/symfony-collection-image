{% extends 'base.html.twig' %}

{% block title %}Liste des mariages{% endblock %}

{% block body %}
<div class="mx-auto space-y-12 max-w-7xl px-6 lg:px-8">
    <div class="space-y-2 mx-auto md:flex md:justify-between md:items-center sm:block">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Liste des mariages</h2>

        <div class="flex sm:justify-end md:justify-end items-center">
            <a href="{{ path('wedding_new') }}" class="btn-primary">Créer un nouveau</a>
        </div>
    </div>

    <div class="flex flex-col">
        <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
                <div class="overflow-hidden">
                    <table class="min-w-full text-left text-sm font-light">
                        <thead class="border-b font-medium dark:border-neutral-500">
                        <tr>
                            <th scope="col" class="px-6 py-4">Mariés</th>
                            <th scope="col" class="px-6 py-4">Lieu & Date</th>
                            <th scope="col" class="px-6 py-4 text-end">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for wedd in wedds %}
                            <tr class="border-b dark:border-neutral-500">
                            <td class="whitespace-nowrap px-6 py-4 font-medium">{{ wedd.mary }} et {{ wedd.wife }}</td>
                            <td class="whitespace-nowrap px-6 py-4">{{ wedd.city }}, Le {{ wedd.weddAt ? wedd.weddAt|date('d/ m/ Y') : '' }}</td>
                            <td class="whitespace-nowrap px-6 py-4 text-end">
                                <div class="flex items-center justify-end gap-x-2">
                                    <a href="{{ path('wedding_edit', {id: wedd.id}) }}" class="btn-warning">Modifier</a>
                                    {{ include('wedding/_delete_form.html.twig') }}
                                </div>
                            </td>
                        </tr>
                        {% else %}
                            <tr>
                                <td colspan="3">OUPS! Aucun mariage enregistrer</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
